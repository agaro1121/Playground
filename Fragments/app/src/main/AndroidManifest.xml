<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hierro.fragments" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.hierro.fragments.FruitListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hierro.fragments.FruitDetailActivity"
            android:label="@string/title_fruit_detail"
            android:parentActivityName="org.hierro.fragments.FruitListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FruitListActivity" />
        </activity>
    </application>

</manifest>
